<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffff">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="#FFFF"
                android:textAlignment="center"
                android:text="Faculty Sign Up"
                android:textColor="#000000"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
               android:layout_alignBottom="@+id/textView3"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="-70dp"
                android:background="@drawable/edit_corner"
                android:backgroundTint="#F9A602"
                android:drawableLeft="@mipmap/logo"
                android:textSize="20dp"
                android:ems="10"
                android:hint="User Name"
                android:inputType="textPersonName"
                android:layout_centerHorizontal="true"
                android:textColor="#800000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/editText9"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
               android:layout_alignBottom="@+id/editText3"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="-62dp"
                android:background="@drawable/edit_corner"
                android:backgroundTint="#F9A602"
                android:drawableLeft="@mipmap/id"
                android:ems="10"
                android:textSize="20dp"
                android:hint="VEC-ID No"
                android:inputType="textPersonName"
                android:textColor="#800000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/editText10"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
               android:layout_alignBottom="@+id/textView4"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="-62dp"
                android:background="@drawable/edit_corner"
                android:backgroundTint="#F9A602"
                android:drawableLeft="@mipmap/email"
                android:textSize="20dp"
                android:ems="10"
                android:hint="E-Mail"
                android:inputType="textEmailAddress"
                android:textColor="#800000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
               android:layout_alignBottom="@+id/editText10"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="-62dp"
                android:background="@drawable/edit_corner"
                android:backgroundTint="#F9A602"
                android:drawableLeft="@mipmap/password"
                android:ems="10"
                android:textSize="20dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#800000"
                android:textColorHint="#000000" />

            <EditText
                android:id="@+id/editText12"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
               android:layout_alignBottom="@+id/editText11"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="-62dp"
                android:background="@drawable/edit_corner"
                android:backgroundTint="#F9A602"
                android:drawableLeft="@mipmap/phone"
                android:textSize="20dp"
                android:ems="10"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:textColor="#800000"
                android:textColorHint="#000000" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
               android:layout_alignBottom="@+id/editText12"
                android:layout_marginStart="97dp"
                android:layout_marginLeft="97dp"
                android:layout_marginEnd="104dp"
                android:layout_marginRight="104dp"
                android:layout_marginBottom="-90dp"
                android:background="@drawable/button_background4"
                android:backgroundTint="#FFBF00"
                android:text="REGISTER"
                android:textSize="18dp"
                android:textColor="#FFFF" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
               android:layout_alignBottom="@+id/editText9"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="-62dp"
                android:background="@drawable/edit_corner"
                android:backgroundTint="#F9A602"
                android:drawableLeft="@mipmap/depat"
                android:textSize="25dp" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignEnd="@+id/textView4"
                android:layout_alignRight="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="4dp"
                android:entries="@array/Department1"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>